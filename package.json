{
  "name": "censitive",
  "displayName": "Censitive",
  "description": "automatically censor sensetive information like passwords and keys",
  "author": "1nVitr0",
  "publisher": "1nVitr0",
  "repository": {
    "type": "git",
    "url": "https://github.com/1nVitr0/plugin-vscode-censitive"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.censitive"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "censitive.toggleCensoring",
        "title": "Toggle Censoring of Sensitive Information"
      }
    ],
    "configuration": {
      "title": "Censitive",
      "properties": {
        "censitive.enable": {
          "default": true,
          "description": "Controls if censoring is enabled",
          "type": "boolean"
        },
        "censitive.languages": {
          "type": "array",
          "default": [
            "*"
          ],
          "description": "An array of language ids which should be censored. \"*\" to trigger on any language; Prepend language id with \"!\" to exclude the language (i.e \"!typescript\", \"!javascript\")"
        },
        "censtive.censoring": {
          "type": "object",
          "default": {
            "type": "colorBar",
            "prefix": "ðŸ”’",
            "border": "2px solid grey",
            "grow": true
          },
          "description": "Visual settings used for censoring",
          "anyOf": [
            {
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "opacity"
                  ],
                  "required": true,
                  "description": "Hide sensitive data by reducing the opacity"
                },
                "prefix": {
                  "type": "string",
                  "default": "ðŸ”’",
                  "description": "text displayed before the censored content"
                },
                "postfix": {
                  "type": "string",
                  "description": "text displayed after the censored content"
                },
                "grow": {
                  "type": "boolean",
                  "default": true,
                  "description": "grow censoring when the text is edited (when disabled single letters might be visible before censored)"
                },
                "border": {
                  "type": "string",
                  "description": "css border around censored content"
                },
                "opacity": {
                  "type": "string",
                  "default": "0",
                  "description": "opacity of the censored content"
                }
              }
            },
            {
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "colorBar"
                  ],
                  "required": true,
                  "description": "Hide sensitive data by blocking it with a colored bar"
                },
                "prefix": {
                  "type": "string",
                  "default": "ðŸ”’",
                  "description": "text displayed before the censored content"
                },
                "postfix": {
                  "type": "string",
                  "description": "text displayed after the censored content"
                },
                "grow": {
                  "type": "boolean",
                  "default": true,
                  "description": "grow censoring when the text is edited (when disabled single letters might be visible before censored)"
                },
                "border": {
                  "type": "string",
                  "description": "css border around censored content"
                },
                "color": {
                  "type": "string",
                  "default": "black",
                  "description": "color of the censor bar"
                }
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {}
}
